<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp">

                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/icon_back_left_black"
                    android:drawablePadding="10dp"
                    android:text="返回"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="关闭"
                    android:textColor="#333333" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxWidth="140dp"
                android:singleLine="true"
                android:text="不动产权属查询"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="15dp"
                android:src="@mipmap/ic_more" />
        </FrameLayout>
       <ImageView
           android:id="@+id/iv_page"
           android:layout_width="match_parent"
           android:src="@mipmap/third_page"
           android:adjustViewBounds="true"
           android:layout_height="wrap_content"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#414141"
                android:paddingLeft="25dp"
                android:paddingEnd="25dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/cert9" />
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@mipmap/cert2"
                    android:layout_marginTop="12dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@mipmap/cert3"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/cert8" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:textSize="6sp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="end"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="265pt"
                        android:text="2023-12-13"
                        android:layout_height="wrap_content" />
                </FrameLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>